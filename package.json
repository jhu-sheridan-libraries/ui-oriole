{
  "name": "@folio/oriole",
  "version": "0.1.0",
  "description": "Library Database Manager",
  "main": "src/index.js",
  "repository": "",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "start": "NODE_OPTIONS='--max-old-space-size=6192' stripes serve",
    "build": "stripes build --output ./output",
    "test": "stripes test nightmare --run demo --show",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@folio/eslint-config-stripes": "^1.1.0",
    "babel-eslint": "^8.0.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "eslint": "^4.8.0"
  },
  "dependencies": {
    "@folio/stripes-components": "^3.0.0",
    "@folio/stripes-form": "^0.8.200024",
    "@folio/stripes-smart-components": "^1.4.23",
    "lodash": "^4.17.10",
    "prop-types": "^15.6.0",
    "query-string": "^6.1.0",
    "react-intl": "^2.4.0",
    "react-router-dom": "^4.1.1",
    "redux-form": "^7.4.2"
  },
  "peerDependencies": {
    "@folio/stripes-connect": "^3.1.1",
    "@folio/stripes-core": "^2.10.2",
    "@folio/stripes-logger": "^0.0.2",
    "react": "*"
  },
  "stripes": {
    "type": "app",
    "displayName": "ui-oriole.title",
    "route": "/oriole",
    "home": "/oriole",
    "hasSettings": true,
    "okapiInterfaces": {
      "oriole": "1.0"
    },
    "queryResource": "query",
    "permissionSets": [
      {
        "permissionName": "module.oriole.enabled",
        "displayName": "UI: module oriole is enabled"
      },
      {
        "permissionName": "ui-oriole.view",
        "displayName": "Oriole: Can view resources",
        "subPermissions": [
          "module.oriole.enabled",
          "module.oriole.collection.get",
          "module.oriole.item.get"
        ],
        "visible": true
      },
      {
        "permissionName": "ui-oriole.edit",
        "displayName": "Oriole: can edit resources",
        "subPermissions": [
          "ui-oriole.view",
          "module.oriole.item.put"
        ],
        "visible": true
      },
      {
        "permissionName": "ui.oriole.create",
        "displayName": "Oriole: can create resources",
        "subPermissions": [
          "ui-oriole.edit",
          "module.oriole.item.post"
        ],
        "visible": true        
      }
    ]
  }
}
